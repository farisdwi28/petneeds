{
  "name": "petneeds-api",
  "version": "1.0.0",
  "description": "RESTful API for PetNeeds e-commerce platform with Midtrans payment integration",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "migrate": "node -e \"require('./utils/migrate').runMigrations()\"",
    "migrate:rollback": "node -e \"require('./utils/migrate').rollbackMigrations()\"",
    "migrate:rollback:1": "node -e \"require('./utils/migrate').rollbackMigrations(1)\"",
    "db:test": "node -e \"require('./config/database').testConnection()\"",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:coverage:html": "cross-env NODE_ENV=test jest --coverage --coverageReporters=html",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --watchAll=false --passWithNoTests"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/migrations/**",
      "!**/config/**",
      "!**/utils/migrate.js",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testTimeout": 10000
  },
  "keywords": [
    "ecommerce",
    "api",
    "rest",
    "midtrans",
    "payment",
    "pet",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "midtrans-client": "^1.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
